<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Username"
            android:ems="10"
            android:id="@+id/register_activity_username_field"
            app:layout_constraintTop_toBottomOf="@+id/register_activity_username_text"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/register_activity_email_field"
            app:layout_constraintTop_toBottomOf="@+id/register_activity_email_text"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/register_activity_password_field"
            app:layout_constraintTop_toBottomOf="@+id/register_activity_password_text"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Username:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_activity_username_text"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/register_activity_email_text"
            app:layout_constraintTop_toBottomOf="@+id/register_activity_username_field"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Password:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/register_activity_password_text"
            app:layout_constraintTop_toBottomOf="@+id/register_activity_email_field"
            app:layout_constraintStart_toStartOf="parent"/>
    <CheckBox
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_activity_accept_regulations_checkbox"
            app:layout_constraintTop_toBottomOf="@+id/register_activity_password_confirmation_field"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Password confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_activity_password_confirmation_text"
            app:layout_constraintTop_toBottomOf="@+id/register_activity_password_field"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/register_activity_password_confirmation_field"
            app:layout_constraintTop_toBottomOf="@+id/register_activity_password_confirmation_text"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_activity_register_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Accept Regulations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/register_activity_accept_reulations_text"
            app:layout_constraintStart_toEndOf="@+id/register_activity_accept_regulations_checkbox"
            android:layout_marginTop="12dp"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@+id/register_activity_password_confirmation_field"/>
</androidx.constraintlayout.widget.ConstraintLayout>